ARG  DOCKER_REGISTRY
FROM $DOCKER_REGISTRY/spack-base:latest

ARG  ENV
ARG  CONCRETE_ENV
ARG  SPACK_COMPILER
ARG  SPACK_MPI

# Copy environment definition
COPY envs/$ENV/* /build/

# Copy Spack lock file
COPY artifacts/ci-$CONCRETE_ENV/spack.* /build/

USER mamba
RUN  /build/install-mamba-env.sh

USER spack
RUN  /build/install-spack-env.sh
